<h1>Title: <%= @post.title %></h1>
<h5>By: <%= @post.user_id %></h5>
<h1>Question: <%= @post.body %></h1>
<% if current_user %>
  <%= link_to like_post_path(@post), method: :put do %>
    Upvote
    <%= @post.get_upvotes.size %>
  <% end %>
  <%= link_to dislike_post_path(@post), method: :put do %>
    Downvote
    <%= @post.get_downvotes.size %>
  <% end %>
<% end %>
<hr>
<br>
<h3>Answers</h3>
  <% @answers.each do |answer| %>
  <div class="row">
  <div class="col sm-4">
    <div class="card card-block">
      <h3>Answer: <%= answer.body %></h3>
      <h3>user: <%= (User.find(answer.user_id)).username %></h3>
      <% answer.comments.each do |comment| %>
        <p>Comment: <%= comment.body %></p>
        <p>Comment: <%= comment.user_id %></p>
      <% end %>
      <% if current_user %>
      <%= link_to like_answer_path(answer), method: :put do %>
      Upvote
      <%= answer.get_upvotes.size %>
      <% end %>
      <%= link_to dislike_answer_path(answer), method: :put do %>
      Downvote
      <%= answer.get_downvotes.size %>
      <% end %>
      <% end %>
    </div>
  </div>
</div><br>
<% end %>
